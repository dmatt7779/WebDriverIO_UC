//IndexOf para validar en que posici√≥n se encuentra un caracter
let newString = 'Sunday is a funday day'
let count = 0
let stringValue = newString.indexOf("day")
console.log("First String Value " + stringValue)
while(stringValue !== -1) {
    count++
    console.log("count" + count)
    stringValue = newString.indexOf("day", stringValue + 1)
    console.log("stringValue" + stringValue)
}
console.log("Total" + count)

